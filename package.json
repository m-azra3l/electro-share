{
  "name": "electro-share",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "https://github.com/m-azra3l/electro-share.git",
  "author": "Michael <gadreelazazel@gmail.com>",
  "license": "MIT",
  "description": "Proof of Concept for a Desktop Sync Application",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "TestId",
    "productName": "ElectroShare",
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "virtualFolder.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ElectroShare"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "axios": "^1.7.4",
    "chokidar": "^3.6.0",
    "crypto-js": "^4.2.0",
    "electron-store": "^10.0.0",
    "uuidv4": "^6.2.13",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3"
  }
}
